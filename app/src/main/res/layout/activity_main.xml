<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:layout_weight="1.47" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.24"
            android:background="@drawable/gradient">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="100">

                <ImageView
                    android:id="@+id/iv_cell_1_1"
                    style="@style/Circle_Button_Transparent" />

                <ImageView
                    android:id="@+id/iv_cell_1_2"
                    style="@style/Circle_Button_Transparent" />

                <ImageView
                    android:id="@+id/iv_cell_1_3"
                    style="@style/Circle_Button_Transparent" />

                <ImageView
                    android:id="@+id/iv_cell_1_4"
                    style="@style/Circle_Button_Transparent" />

                <ImageView
                    android:id="@+id/iv_cell_1_5"
                    style="@style/Circle_Button_Transparent" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="100">

                <ImageView
                    android:id="@+id/iv_cell_2_1"
                    style="@style/Circle_Button_Transparent" />

                <ImageView
                    android:id="@+id/iv_cell_2_2"
                    style="@style/Circle_Button_Transparent" />

                <ImageView
                    android:id="@+id/iv_cell_2_3"
                    style="@style/Circle_Button_Transparent" />

                <ImageView
                    android:id="@+id/iv_cell_2_4"
                    style="@style/Circle_Button_Transparent" />

                <ImageView
                    android:id="@+id/iv_cell_2_5"
                    style="@style/Circle_Button_Transparent" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="100">

                <ImageView
                    android:id="@+id/iv_cell_3_1"
                    style="@style/Circle_Button_Transparent" />

                <ImageView
                    android:id="@+id/iv_cell_3_2"
                    style="@style/Circle_Button_Transparent" />

                <ImageView
                    android:id="@+id/iv_cell_3_3"
                    style="@style/Circle_Button_Transparent" />

                <ImageView
                    android:id="@+id/iv_cell_3_4"
                    style="@style/Circle_Button_Transparent" />

                <ImageView
                    android:id="@+id/iv_cell_3_5"
                    style="@style/Circle_Button_Transparent" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="100">

                <ImageView
                    android:id="@+id/iv_cell_4_1"
                    style="@style/Circle_Button_Transparent" />

                <ImageView
                    android:id="@+id/iv_cell_4_2"
                    style="@style/Circle_Button_Transparent" />

                <ImageView
                    android:id="@+id/iv_cell_4_3"
                    style="@style/Circle_Button_Transparent" />

                <ImageView
                    android:id="@+id/iv_cell_4_4"
                    style="@style/Circle_Button_Transparent" />

                <ImageView
                    android:id="@+id/iv_cell_4_5"
                    style="@style/Circle_Button_Transparent" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="100">

                <ImageView
                    android:id="@+id/iv_cell_5_1"
                    style="@style/Circle_Button_Transparent" />

                <ImageView
                    android:id="@+id/iv_cell_5_2"
                    style="@style/Circle_Button_Transparent" />

                <ImageView
                    android:id="@+id/iv_cell_5_3"
                    style="@style/Circle_Button_Transparent" />

                <ImageView
                    android:id="@+id/iv_cell_5_4"
                    style="@style/Circle_Button_Transparent" />

                <ImageView
                    android:id="@+id/iv_cell_5_5"
                    style="@style/Circle_Button_Transparent" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="100">

                <ImageView
                    android:id="@+id/iv_cell_6_1"
                    style="@style/Circle_Button_Transparent" />

                <ImageView
                    android:id="@+id/iv_cell_6_2"
                    style="@style/Circle_Button_Transparent" />

                <ImageView
                    android:id="@+id/iv_cell_6_3"
                    style="@style/Circle_Button_Transparent" />

                <ImageView
                    android:id="@+id/iv_cell_6_4"
                    style="@style/Circle_Button_Transparent" />

                <ImageView
                    android:id="@+id/iv_cell_6_5"
                    style="@style/Circle_Button_Transparent" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="100">

                <ImageView
                    android:id="@+id/iv_cell_7_1"
                    style="@style/Circle_Button_Transparent" />

                <ImageView
                    android:id="@+id/iv_cell_7_2"
                    style="@style/Circle_Button_Transparent" />

                <ImageView
                    android:id="@+id/iv_cell_7_3"
                    style="@style/Circle_Button_Transparent" />

                <ImageView
                    android:id="@+id/iv_cell_7_4"
                    style="@style/Circle_Button_Transparent" />

                <ImageView
                    android:id="@+id/iv_cell_7_5"
                    style="@style/Circle_Button_Transparent" />

            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.29"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_arrow_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/arrow_left" />

            <ImageView
                android:id="@+id/iv_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/circle_button" />

            <ImageView
                android:id="@+id/iv_arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/arrow_right" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>